<%- partial ('partials/statusmessage.ejs') %>

<center><h1>Purple Team</h1></center>
<h3>Players</h3>
<table class="table table-striped table-bordered">
  <tr>
    <th>ID</th>
    <th>Player Name</th>
    <th>Age</th>
    <th>Position</th>
    <th>Parent Contact</th>
    <th>Phone</th>
   
  </tr>
  <% if(typeof players != "undefined" && players.length > 0){ %>
    <% players.forEach(function(players){ %>
      <tr>
        <td><%= players.id %></td>
        <td><%= players.playerName %></td>
        <td><%= players.playerAge %></td>
        <td><%= players.playerPosition %></td>
        <td><%= players.parentContact %></td>
        <td><%= players.parentPhone %></td>
      </tr>
    <% }) %>
  <% }else{ %>
      <tr>
        <td colspan="6">0 records found</td>
      </tr>
  <% } %>
  
</table>
</body>

